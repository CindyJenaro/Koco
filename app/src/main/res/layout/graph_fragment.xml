<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almost_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="@color/almost_white">

        <SearchView
            android:id="@+id/search"
            android:background="@drawable/searchbar_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/searchbar_padding"/>

        <TextView
            android:id="@+id/entity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_padding"
            android:paddingRight="@dimen/item_padding"
            android:paddingTop="26dp"
            android:paddingBottom="10dp"
            android:text="实体名称"
            android:layout_marginLeft="@dimen/item_marginleft"
            android:gravity="center_horizontal"
            android:textColor="@color/almost_black"
            />

        <TextView
            android:id="@+id/entity_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_weight="12"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/entity_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/moderate_black"
                    android:paddingLeft="@dimen/detail_padding"
                    android:paddingRight="@dimen/detail_padding"
                    android:paddingBottom="@dimen/detail_padding"
                    />

                <TextView
                    android:id="@+id/entity_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/moderate_black"
                    android:text="实体描述"
                    android:paddingTop="20dp"
                    android:paddingLeft="@dimen/detail_padding"
                    android:paddingRight="@dimen/detail_padding"
                    android:paddingBottom="@dimen/detail_padding"
                    android:layout_below="@+id/entity_img"

                    />

                <TextView
                    android:id="@+id/entity_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/moderate_black"
                    android:text="实体属性"
                    android:paddingTop="20dp"
                    android:paddingLeft="@dimen/detail_padding"
                    android:paddingRight="@dimen/detail_padding"
                    android:paddingBottom="@dimen/detail_padding"
                    android:layout_below="@+id/entity_description"
                    />

                <TextView
                    android:id="@+id/entity_relations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/moderate_black"
                    android:text="实体关系"
                    android:paddingTop="20dp"
                    android:paddingLeft="@dimen/detail_padding"
                    android:paddingRight="@dimen/detail_padding"
                    android:paddingBottom="@dimen/detail_padding"
                    android:layout_below="@+id/entity_property"

                    />


            </RelativeLayout>

        </ScrollView>

    </LinearLayout>



</RelativeLayout>